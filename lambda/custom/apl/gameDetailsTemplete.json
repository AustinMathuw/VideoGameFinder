{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 48,
                "textSizePrimary": 27,
                "textSizeSecondary": 23,
                "textSizeSecondaryHint": 25
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color and core font family",
            "values": [
                {
                    "color": "@colorTextPrimary",
                    "fontFamily": "Amazon Ember"
                }
            ]
        },
        "textStyleBase0": {
            "description": "Thin version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "100"
            }
        },
        "textStyleBase1": {
            "description": "Light version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "300"
            }
        },
        "mixinBody": {
            "values": {
                "fontSize": "@textSizeBody"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStylePrimary": {
            "extend": [
                "textStyleBase1",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleBase0",
                "mixinSecondary"
            ]
        },
        "textStyleBody": {
            "extend": [
                "textStyleBase1",
                "mixinBody"
            ]
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        }
    },
    "layouts": {
        "gameInfo": {
            "parameters": [
                "gameTitle",
                "skillLogo",
                "screenshotImageUrl",
                "backgroundImageUrl",
                "coverImageUrl",
                "infoText1",
                "infoText2",
                "infoText3",
                "infoText4",
                "summaryText"
            ],
            "items": [
                {
                    "type": "Container",
                    "width": "100vw",
                    "height": "100vh",
                    "id": "${gameTitle}",
                    "items": [
                        {
                            "type": "Container",
                            "direction": "column",
                            "width": "100vw",
                            "height": "100vh",
                            "position": "absolute",
                            "items": [
                                {
                                    "type": "Image",
                                    "source": "${screenshotImageUrl}",
                                    "scale": "best-fill",
                                    "width": "100vw",
                                    "height": "35vh"
                                },
                                {
                                    "type": "Image",
                                    "source": "${backgroundImageUrl}",
                                    "scale": "best-fill",
                                    "width": "100vw",
                                    "height": "70vh"
                                }
                            ]
                        },
                        {
                            "type": "AlexaHeader",
                            "headerTitle": "${gameTitle}",
                            "headerAttributionImage": "${skillLogo}"
                        },
                        {
                            "type": "Container",
                            "position": "absolute",
                            "direction": "row",
                            "paddingTop": "10vh",
                            "width": "100vw",
                            "height": "100vh",
                            "grow": 1,
                            "items": [
                                {
                                    "paddingTop": "30vh",
                                    "paddingLeft": "5vh",
                                    "paddingRight": "5vh",
                                    "width": "20vw",
                                    "height": "100vh",
                                    "type": "Text",
                                    "text": "<b>Release:</b><br />${infoText1}",
                                    "style": "textStylePrimary",
                                    "textAlign": "center"
                                },
                                {
                                    "paddingTop": "30vh",
                                    "paddingLeft": "5vh",
                                    "paddingRight": "5vh",
                                    "width": "20vw",
                                    "height": "100vh",
                                    "type": "Text",
                                    "text": "<b>Ratings:</b><br />${infoText2}",
                                    "style": "textStylePrimary",
                                    "textAlign": "center"
                                },
                                {
                                    "type": "Image",
                                    "source": "${coverImageUrl}",
                                    "width": "20vw",
                                    "height": "40vh",
                                    "scale": "best-fit",
                                    "align": "center"
                                },
                                {
                                    "paddingTop": "30vh",
                                    "paddingLeft": "5vh",
                                    "paddingRight": "5vh",
                                    "width": "20vw",
                                    "height": "100vh",
                                    "type": "Text",
                                    "text": "<b>Critic Score:</b><br />${infoText3}",
                                    "style": "textStylePrimary",
                                    "textAlign": "center"
                                },
                                {
                                    "paddingTop": "30vh",
                                    "paddingLeft": "5vh",
                                    "paddingRight": "5vh",
                                    "width": "20vw",
                                    "height": "100vh",
                                    "type": "Text",
                                    "text": "<b>Company:</b><br />${infoText4}",
                                    "style": "textStylePrimary",
                                    "textAlign": "center"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "position": "absolute",
                            "direction": "row",
                            "paddingTop": "70vh",
                            "paddingBottom": "10vh",
                            "paddingRight": "10vw",
                            "paddingLeft": "10vw",
                            "width": "100vw",
                            "height": "100vh",
                            "alignItems": "center",
                            "grow": 1,
                            "items": [
                                {
                                    "type": "ScrollView",
                                    "width": "80vw",
                                    "height": "30vh",
                                    "item": {
                                        "type": "Text",
                                        "text": "${summaryText}",
                                        "style": "textStylePrimary",
                                        "textAlign": "center"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            "${payload.data}"
        ]
    }
}