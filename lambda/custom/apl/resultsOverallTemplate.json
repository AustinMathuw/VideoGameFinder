{
    "document": {
        "type": "APL",
        "version": "1.0",
        "theme": "dark",
        "import": [
            {
                "name": "alexa-layouts",
                "version": "1.0.0"
            }
        ],
        "resources": [
            {
                "description": "Stock color for the light theme",
                "colors": {
                    "colorTextPrimary": "#151920"
                }
            },
            {
                "description": "Stock color for the dark theme",
                "when": "${viewport.theme == 'dark'}",
                "colors": {
                    "colorTextPrimary": "#f0f1ef"
                }
            },
            {
                "description": "Standard font sizes",
                "dimensions": {
                    "textSizeBody": 48,
                    "textSizePrimary": 27,
                    "textSizeSecondary": 23,
                    "textSizeDetails": 20,
                    "textSizeSecondaryHint": 25
                }
            },
            {
                "description": "Common spacing values",
                "dimensions": {
                    "spacingThin": 6,
                    "spacingSmall": 12,
                    "spacingMedium": 24,
                    "spacingLarge": 48,
                    "spacingExtraLarge": 72
                }
            },
            {
                "description": "Common margins and padding",
                "dimensions": {
                    "marginTop": 40,
                    "marginLeft": 60,
                    "marginRight": 60,
                    "marginBottom": 40
                }
            }
        ],
        "styles": {
            "textStyleBase": {
                "description": "Base font description; set color and core font family",
                "values": [
                    {
                        "color": "@colorTextPrimary",
                        "fontFamily": "Amazon Ember"
                    }
                ]
            },
            "textStyleBase0": {
                "description": "Thin version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "100"
                }
            },
            "textStyleBase1": {
                "description": "Light version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "300"
                }
            },
            "textStyleBase2": {
                "description": "Regular version of basic font",
                "extend": "textStyleBase",
                "values": {
                    "fontWeight": "500"
                }
            },
            "mixinBody": {
                "values": {
                    "fontSize": "@textSizeBody"
                }
            },
            "mixinPrimary": {
                "values": {
                    "fontSize": "@textSizePrimary"
                }
            },
            "mixinDetails": {
                "values": {
                    "fontSize": "@textSizeDetails"
                }
            },
            "mixinSecondary": {
                "values": {
                    "fontSize": "@textSizeSecondary"
                }
            },
            "textStylePrimary": {
                "extend": [
                    "textStyleBase1",
                    "mixinPrimary"
                ]
            },
            "textStyleSecondary": {
                "extend": [
                    "textStyleBase0",
                    "mixinSecondary"
                ]
            },
            "textStyleBody": {
                "extend": [
                    "textStyleBase1",
                    "mixinBody"
                ]
            },
            "textStyleSecondaryHint": {
                "values": {
                    "fontFamily": "Bookerly",
                    "fontStyle": "italic",
                    "fontSize": "@textSizeSecondaryHint",
                    "color": "@colorTextPrimary"
                }
            },
            "textStyleDetails": {
                "extend": [
                    "textStyleBase2",
                    "mixinDetails"
                ]
            }
        },
        "layouts": {
            "fullResultsListItem": {
                "parameters": [
                    "results",
                    "result",
                    "listLength"
                ],
                "items": [
                    {
                        "type": "TouchWrapper",
                        "id": "SearchItem",
                        "onPress": {
                            "type": "SendEvent",
                            "arguments": [
                                "SearchItem",
                                "${ordinal}"
                            ]
                        },
                        "item": [
                            {
                                "type": "Container",
                                "height": "100vh",
                                "width": "100vw",
                                "alignItems": "center",
                                "justifyContent": "end",
                                "items": [
                                    {
                                        "type": "Image",
                                        "position": "absolute",
                                        "height": "100vh",
                                        "width": "100vw",
                                        "overlayColor": "rgba(0, 0, 0, 0.6)",
                                        "source": "${result.coverImageUrl}",
                                        "scale": "best-fill"
                                    },
                                    {
                                        "type": "AlexaHeader",
                                        "grow": 1
                                    },
                                    {
                                        "type": "Text",
                                        "text": "${result.gameTitle}",
                                        "style": "textStyleBody",
                                        "maxLines": 1
                                    },
                                    {
                                        "type": "Text",
                                        "text": "${result.infoText1}",
                                        "style": "textStyleDetails"
                                    },
                                    {
                                        "type": "Text",
                                        "text": "${ordinal} | ${listLength}",
                                        "paddingBottom": "20dp",
                                        "color": "white",
                                        "spacing": "5dp"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "resultsListItem": {
                "parameters": [
                    "result"
                ],
                "items": [
                    {
                        "type": "TouchWrapper",
                        "id": "SearchItem",
                        "onPress": {
                            "type": "SendEvent",
                            "arguments": [
                                "SearchItem",
                                "${ordinal}"
                            ]
                        },
                        "item": {
                            "type": "Container",
                            "maxWidth": 528,
                            "minWidth": 312,
                            "paddingLeft": 16,
                            "paddingRight": 16,
                            "height": "100%",
                            "items": [
                                {
                                    "type": "Image",
                                    "source": "${result.coverImageUrl}",
                                    "height": "50vh",
                                    "width": "50vh"
                                },
                                {
                                    "type": "Text",
                                    "text": "<b>${ordinal}.</b> ${result.gameTitle}",
                                    "style": "textStyleSecondary",
                                    "maxLines": 1,
                                    "spacing": 12
                                },
                                {
                                    "type": "Text",
                                    "text": "${result.infoText1}",
                                    "style": "textStyleDetails",
                                    "spacing": 4
                                }
                            ]
                        }
                    }
                ]
            },
            "resultsList": {
                "parameters": [
                    "backgroundImageUrl",
                    "pageTitle",
                    "skillLogo",
                    "hintText",
                    "results"
                ],
                "items": [
                    {
                        "when": "${viewport.shape == 'round'}",
                        "type": "Container",
                        "height": "100%",
                        "width": "100%",
                        "items": [
                            {
                                "type": "Sequence",
                                "scrollDirection": "horizontal",
                                "data": "${results}",
                                "height": "100%",
                                "width": "100%",
                                "numbered": true,
                                "item": [
                                    {
                                        "type": "fullResultsListItem",
                                        "result": "${data}",
                                        "listLength": "${results.length}"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Container",
                        "height": "100vh",
                        "width": "100vw",
                        "items": [
                            {
                                "type": "Image",
                                "source": "${backgroundImageUrl}",
                                "scale": "best-fill",
                                "width": "100vw",
                                "height": "100vh",
                                "position": "absolute"
                            },
                            {
                                "type": "AlexaHeader",
                                "headerTitle": "${pageTitle}",
                                "headerAttributionImage": "${skillLogo}"
                            },
                            {
                                "type": "Sequence",
                                "scrollDirection": "horizontal",
                                "paddingLeft": "@marginLeft",
                                "paddingRight": "@marginRight",
                                "data": "${results}",
                                "height": "70vh",
                                "width": "100%",
                                "numbered": true,
                                "item": [
                                    {
                                        "type": "resultsListItem",
                                        "result": "${data}"
                                    }
                                ]
                            },
                            {
                                "type": "AlexaFooter",
                                "footerHint": "${hintText}"
                            }
                        ]
                    }
                ]
            },
            "resultsDisplay": {
                "parameters": [
                    "searchedGame",
                    "backgroundImageUrl",
                    "pageTitle",
                    "skillLogo",
                    "hintText",
                    "results"
                ],
                "items": [
                    {
                        "type": "resultsList",
                        "backgroundImageUrl": "${backgroundImageUrl}",
                        "pageTitle": "${pageTitle}",
                        "skillLogo": "${skillLogo}",
                        "hintText": "${hintText}",
                        "results": "${results}"
                    }
                ]
            }
        },
        "mainTemplate": {
            "parameters": [
                "payload"
            ],
            "item": [
                {
                    "searchedGame": "${payload.data.properties.searchedGame}",
                    "hintText": "${payload.data.properties.hintText}",
                    "pageTitle": "${payload.data.properties.pageTitle}",
                    "skillLogo": "${payload.data.properties.skillLogo}",
                    "type": "resultsDisplay",
                    "results":   "${payload.data.properties.results}"
                    }
            ]
        }
    },
